<?xml version="1.0"?>
<config>
    <modules>
        <Aligent_Messages>
            <version>0.1.2</version>
        </Aligent_Messages>
    </modules>
    <frontend>
        <events>
            <controller_front_send_response_before>
                <observers>
                    <capture_messages_before>
                        <type>singleton</type>
                        <class>aligent_messages/messages</class>
                        <method>messagesControllerFrontSendResponseBefore</method>
                    </capture_messages_before>
                </observers>
            </controller_front_send_response_before>
            <controller_front_send_response_after>
            <observers>
                <capture_messages_after>
                    <type>singleton</type>
                    <class>aligent_messages/messages</class>
                    <method>messagesControllerFrontSendResponseAfter</method>
                </capture_messages_after>
            </observers>
            </controller_front_send_response_after>
            <core_session_abstract_add_message>
            <observers>
                <aligent_messages>
                    <type>singleton</type>
                    <class>aligent_messages/messages</class>
                    <method>addMessageDetails</method>
                </aligent_messages>
            </observers>
            </core_session_abstract_add_message>
        </events>
    </frontend>
</config>
